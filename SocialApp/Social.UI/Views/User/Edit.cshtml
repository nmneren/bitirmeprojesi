@model User
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section UserEditCss {
    <link href="~/Custom/UserEdit.css" rel="stylesheet" />
}

<div class="content">
    <div class="row" id="divmain">
        <div id="divbutton">
            <ul>
                <li class="active">
                    <a>
                        Profil Düzenle
                    </a>
                </li>
                <li class=" disabled">
                    <a asp-controller="User" asp-action="ChangePassword" asp-area="">
                        Şifre Değiştir
                    </a>
                </li>
                <li class="disabled">
                    <a asp-controller="User" asp-action="ConfirmDelete" asp-area="">
                        Hesabımı Sil
                    </a>
                </li>
            </ul>
        </div>
        <div id="divcontent">

            @if (TempData["Success"] != null)
            {
                <div id="alert" class="alert alert-success">@TempData["Success"]</div>
            }

            @if (TempData["Error"] != null)
            {
                <div id="alert" class="alert alert-danger">@TempData["Error"]</div>
            }

            <div id="divimg">
                <img src="@Model.ProfileImagePath" alt="" width="150" height="150" class="rounded-circle">
            </div>

            <form asp-controller="User" asp-action="Edit" method="post" class="form-horizontal" enctype="multipart/form-data">

                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <input class="form-control" type="file" name="files">
                </div>
                <div class="form-group">
                    <label for="Name">Ad Soyad</label>
                    <input type="text" asp-for="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Name">Kullanıcı Adı</label>
                    <p class="form-control">@Model.UserName</p>
                </div>
                <div class="form-group">
                    <label for="Email">E-Posta</label>
                    <input type="text" asp-for="Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="WebSite">Web Site</label>
                    <input type="text" asp-for="Url" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Biography">Biyografi</label>
                    <textarea class="form-control" rows="5" asp-for="Biography" style="resize:none"></textarea>
                </div>
                <div class="form-group">
                    <label for="Gender">Cinsiyet</label>
                    <select class="form-control" asp-for="Gender" required>
                        <option value="">Seçiniz</option>
                        <option value="Erkek">Erkek</option>
                        <option value="Kadın">Kadın</option>
                    </select>
                </div>
                <div id="inputbutton" class="form-group" style="text-align:right;">
                    <input type="submit" value="Güncelle" class="form-control btn btn-primary col-md-3" />
                </div>
            </form>
        </div>
    </div>
</div>